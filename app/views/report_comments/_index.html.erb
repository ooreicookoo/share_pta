<ul>
  <% report_comments.each do |report_comment| %>
    <% if report_comment.id.present? %>
      <li>
        <div class="comment_content" id = "this_comment_<%= report_comment.id %>"></div>
        <p><%= report_comment.comment_content %></p>
        <span>投稿日時:<%= report_comment.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
        <p><%= link_to "コメント編集", edit_report_report_comment_path(report, report_comment), remote: true %></p>
        <p><%= link_to "コメント削除", report_report_comment_path(report_comment.report_id, report_comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
