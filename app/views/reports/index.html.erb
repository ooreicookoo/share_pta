<% if current_user.try(:admin?) %>
<%= link_to 'チームを作成する', teams_path %>
  <h1>Reports_admin</h1>
<% else %>
  <h1>Reports</h1>
<% end %>

<h1>レポート一覧</h1>
<table>
  <tr>
    <th>実行日</th>
    <th>レポートタイトル</th>
    <th>作業場所</th>
    <th>所要時間</th>
    <th>名前</th>
  </tr>
<% @reports.each do |report| %>
  <tr>
    <td><%= report.date %></td>
    <td><%= report.title %></td>
    <td><%= report.place %></td>
    <td><%= report.time %>時間</td>
    <td><%= report.user.email %></td>
    <td><%= link_to '詳細を確認する', report_path(report.id) %></td>
<% if report.user.id == current_user.id %>
    <td><%= link_to "レポートを編集する", edit_report_path(report.id) %></td>
    <td><%= link_to "レポートを削除する", report_path(report.id), method: :delete, data: { confirm: '本当に編集していいですか？' } %></td>
  </tr>
<% end %>
<% end %>
<%= link_to '新しくレポートを投稿する', new_report_path %>
</table>
<%= paginate @reports %>
