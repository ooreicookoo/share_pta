<div class="container_position">
  <div class="container">
    <div class="contents">
<h3>以下の内容で、送信する。</h3>
<%= form_with(model: @report, url: team_reports_path, local: true ) do |form| %>
  <% if @report.errors.any? %>
    <div id="errors_explanation">
      <h2><%= @report.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :date, class: 'form-control' %>
    <%= form.hidden_field :place, class: 'form-control' %>
    <%= form.hidden_field :time, step: '0.5' , class: 'form-control' %>
    <%= form.hidden_field :image_cache, class: 'form-control' %>
    <p>タイトル:<%= @report.title %></p>
    <p>内容:<%= @report.content %></p>
    <p>実施日:<%= @report.date %></p>
    <p>作業場所:<%= @report.place %></p>
    <p>所要時間:<%= @report.time %></p><br>
    <p>画像:<%= image_tag(@report.image.url) if @report.image? && @report.image.url %></p>
  <%= form.submit "登録する", id: "reports--confirm__submit" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
    </div>
  </div>
</div>
