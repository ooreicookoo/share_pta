<div class="container_position">
  <div class="container">
    <div class="contents">

　　　<h3 class="tilte">チーム一覧</h3><br>
          <table>
            <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td class="teams-index__teams-item" id=<%="teams-index__teams--#{team.id}"%> >■ <%= team.name %></td>
          <% if current_user.leader? %>
            <td><%= link_to 'Show', team %></td>
            <td><%= link_to 'Edit', edit_team_path(team) %></td>
            <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
              <td><%= link_to 'Show', team %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    </table><br>
    <div class="team_link">
    <%= paginate @teams %>
    </div>
      <% if current_user.leader? || current_user.admin?  %>
      <%= link_to 'New Team', new_team_path, class: 'btn btn-default' %>
    <% end %>
    </div>
  </div>
</div>
