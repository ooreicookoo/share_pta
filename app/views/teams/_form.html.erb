<%= form_with(model: @team, local: true) do |form| %>
  <% if @team.errors.any? %>
    <div id="errors_explanation">
      <h2><%= @team.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="team_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.hidden_field :owner_id, value: current_user.id %>
    <%= form.submit %>
  </div>
<% end %>
