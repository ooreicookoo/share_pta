<div class="container_position">
  <div class="container">
    <div class="contents">
      <h3>招待ページ</h3>
      <%= form_with(model: @team, local: true, url: invite_mail_team_path(id: @team.id), method: "post") do |form| %>
      <br>
      <p>チームに招待したい人のメールアドレス入力してください</p>
        <div class="team_name">
          <%= form.label :email %>
          <%= form.text_field :email, placeholder: "emailアドレスを入力", required: true, id: "team-invite__mail" %>
        </div>
        <br>
          <div class="actions">
            <%= form.hidden_field :owner_id, value: current_user.id %>
            <%= form.submit "招待メールを送信する", id: "team-invite__submit" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
